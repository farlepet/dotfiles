		bindsym button1 nop
		bindsym button4 nop
		bindsym button5 nop

		colors {
			statusline #b8b8b8
		}

        tray_output eDP1
		font pango:xos4 Terminus, Font Awesome 8
        #font pango:DejaVu Sans Mono 8
		position top
		strip_workspace_numbers yes

		binding_mode_indicator no


}

